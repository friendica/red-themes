{{include file = "prettyphoto.tpl"}}
<div class="page">
<div class="generic-content-wrapper" id="generic-content-wrapper" >
	<center><h3 class="page-title">{{$title}}</h3></center>
	<div class="page-body">{{$body}}</div>
	<a class="page-author-link" href="{{$auth_url}}">{{$author}}</a>
</div>
</div>
<center><div class="sharebutton"><a href="/rpost?f=&title={{$title}}&body=[quote]{{$preview}}...'[/quote][zrl={{$link}}]{{$link}}[/zrl]?iframe=true&width=80%&height=100%" rel="prettyPhoto[iframes]"><img src="images/rhash-32.png" alt = "Red Matrix Share Button" title = "Share At The Red Matrix"></a></div></center>
